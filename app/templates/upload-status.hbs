<section class="image-container">
  <img {{bind-attr src=original}} alt="spot">
</section>

<aside class="meta">
  <div class="messages">
    {{#each errors.url}}
      <span class="error">{{message}}</span>
    {{/each}}
  </div>

  <div {{bind-attr class=":progress-bar-indication complete"}}>
    <span class="meter" {{bind-attr style=barWidth}}>
      <p>{{toFixed progress 0}}%</p>
    </span>
  </div>
</aside>
