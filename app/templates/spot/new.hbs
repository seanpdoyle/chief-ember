<form {{action "save" on="submit"}}>
  <label>
    Pick a spot to share
    {{#link-to 'image.new'}}or add another{{/link-to}}
  </label>

  <ul class="image-picker">
    {{#each images}}
      {{render "image-item" this}}
    {{/each}}
  </ul>

  {{#each errors.images}}
    <div class="error">{{message}}</div>
  {{/each}}


  {{#with spot}}
    {{input class="name" value=name type="text" placeholder="Name the spot..."}}

    {{#each errors.name}}
      <div class="error">{{message}}</div>
    {{/each}}

    <input type="submit" value="Create!">
  {{/with}}
</form>
