{{#with spot}}
  {{input class="name" value=name type="text" placeholder="Name the spot..."}}
  {{#each errors.name}}
    <div class="error">{{message}}</div>
  {{/each}}

  {{#each errors.images}}
    <div class="error">{{message}}</div>
  {{/each}}

  <button class="submit" {{action "save"}}>Create!</button>
{{/with}}

{{#link-to 'image.new'}}Click here to add an image{{/link-to}}

<ul class="image-picker">
  {{#each images}}
    {{render "image-item" this}}
  {{/each}}
</ul>
