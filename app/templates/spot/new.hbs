<form {{action "save" on="submit"}}>
  <label>Pick one or more images</label>
  <ul class="image-picker">
    {{#each images}}
      {{render "image-item" this}}
    {{/each}}
  </ul>

  {{#each errors.images}}
    <div class="error">{{message}}</div>
  {{/each}}

  {{#link-to 'image.new'}}or click here to add one{{/link-to}}

  {{#with spot}}
    {{input class="name" value=name type="text" placeholder="Name the spot..."}}

    {{#each errors.name}}
      <div class="error">{{message}}</div>
    {{/each}}

    <input type="submit" value="Create!">
  {{/with}}
</form>
