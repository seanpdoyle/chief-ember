#!/usr/bin/env bash

# Make sure we're in a good state.
git checkout master
git pull
rm -rf dist
bin/setup
ember build --environment production

# Move to the "release" branch and make everything work.
git checkout gh-pages
git pull
ls -1 | grep -v -E '^dist|node_modules|bower_components$' | xargs rm -rf
mv dist/* ./
mv dist/.* ./
rmdir dist

# Setup CNAME for GitHub Pages DNS
echo www.wheelbytes.com > CNAME

# Add everything and push it.
git add -A
git commit -am "Update."
git push
git checkout master
git pull
